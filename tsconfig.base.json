{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@avnir/tokens/*": ["packages/tokens/src/*"],
      "@avnir/design/*": ["packages/design/src/*"],
      "@avnir/ui": ["packages/ui/src"]
    },
    "skipLibCheck": true,
    "noEmit": true
  }
}
