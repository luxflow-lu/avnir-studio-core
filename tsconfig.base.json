{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@avnir/design/*": ["packages/design/*"],
      "@avnir/ui/*": ["packages/ui/src/*"],
      "@features/*": ["features/*"]
    },
    "types": ["node"]
  }
}
