:root {
  /* Colors (global) */
  --bg: #0b0b0d;
  --surface: #141317;
  --text: #c5ccd6;
  --titles: #ffffff;
  --muted: #9ca3af;
  --accent: #06e7c7;
  --primary: #ededed;
  --border: #1f1f23;
  
  /* Status colors */
  --success: #10b981;
  --warning: #f59e0b;
  --error: #ef4444;

  /* Spacing (rem) */
  --space-2: 0.125rem;
  --space-4: 0.25rem;
  --space-8: 0.5rem;
  --space-12: 0.75rem;
  --space-16: 1rem;
  --space-24: 1.5rem;
  --space-32: 2rem;
  --space-48: 3rem;
  --space-64: 4rem;
  --section-sm: 3rem;
  --section-md: 4.5rem;
  --section-lg: 6.5rem;

  /* Spacing tokens (rem-based) */
  --space-global-x: 1rem;   /* container inline padding base */
  --space-section-sm: 2rem; /* ~py-8 */
  --space-section-md: 4rem; /* ~py-16 */
  --space-section-lg: 6rem; /* ~py-24 */
  --space-section-xl: 8rem; /* ~py-32 */

  /* Radii (rem) */
  --radius-xs: 0.125rem;
  --radius-sm: 0.375rem;    /* 6px */
  --radius-md: 0.5rem;      /* 8px */
  --radius-lg: 0.75rem;     /* 12px */
  --radius-xl: 0.75rem;
  --radius-2xl: 1rem;
  --radius-full: 9999px;

  /* Shadows */
  --shadow-1: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-2: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  --shadow-3: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-4: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --shadow-5: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);

  /* Z-index */
  --z-drawer: 40;
  --z-modal: 50;
  --z-popover: 60;
  --z-toast: 70;

  /* Motion */
  --duration-100: 100ms;
  --duration-150: 150ms;
  --duration-200: 200ms;
  --duration-300: 300ms;
  --duration-500: 500ms;
  --easing-standard: cubic-bezier(0.4, 0, 0.2, 1);
  --easing-decelerate: cubic-bezier(0, 0, 0.2, 1);
  --easing-accelerate: cubic-bezier(0.4, 0, 1, 1);

  /* On-colors */
  --on-primary: #FFFFFF;
  --on-surface: var(--text);
  --on-accent: #000000;

  /* Semantic aliases for Tailwind */
  --background: var(--bg);
  --foreground: var(--text);
  --card: var(--surface);
  --card-foreground: var(--text);
  --primary-foreground: var(--on-primary);

  /* Containers */
  --container-sm: 40rem;
  --container-md: 48rem;
  --container-lg: 64rem;
  --container-xl: 75rem;
  --container-2xl: 82.5rem;
  --grid-gutter: 1.5rem;

  /* Type */
  --font-sans:
    Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, Noto Sans,
    "Apple Color Emoji", "Segoe UI Emoji";
  --font-mono:
    ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New",
    monospace;
  --h1-size: 3rem;
  --h1-line: 1.15;
  --h1-weight: 700;
  --h2-size: 2rem;
  --h2-line: 1.2;
  --h2-weight: 700;
  --h3-size: 1.625rem;
  --h3-line: 1.25;
  --h3-weight: 600;
  --h4-size: 1.375rem;
  --h4-line: 1.3;
  --h4-weight: 600;
  --body-size: 1rem;
  --body-line: 1.55;
  --body-weight: 400;
  --small-size: 0.875rem;
  --small-line: 1.5;
  --small-weight: 400;

  /* Assets */
  --logo-url: url("/assets/avnir/logo.svg");
}

/* Brand primaries (only var that changes) */
:root[data-brand="avnir"] {
  --primary: #ffd700;
  --on-primary: #ffffff;
}
:root[data-brand="avnir-studio"] {
  --primary: #ededed;
  --on-primary: #0b0b0d;
}
:root[data-brand="muzidev"] {
  --primary: #5cb9f2;
  --on-primary: #ffffff;
}
:root[data-brand="muzipics"] {
  --primary: #ff2d55;
  --on-primary: #ffffff;
}
:root[data-brand="muziweb"] {
  --primary: #9802eb;
  --on-primary: #ffffff;
}
:root[data-brand="muzimerch"] {
  --primary: #ff9d00;
  --on-primary: #ffffff;
}
:root[data-brand="muzibase"] {
  --primary: #2fad66;
  --on-primary: #ffffff;
}
:root[data-brand="muzimanager"] {
  --primary: #ffd700;
  --on-primary: #ffffff;
}
/* others fallback to default */

/* (optional) logos per brand */
:root[data-brand="avnir-studio"] {
  --logo-url: url("/assets/avnir/logo.svg");
}
:root[data-brand="muzidev"] {
  --logo-url: url("/assets/muzidev/logo.svg");
}
:root[data-brand="muzipics"] {
  --logo-url: url("/assets/muzipics/logo.svg");
}

/* Light theme (semi-clair) - opt-in via data-theme="light" */
:root[data-theme="light"] {
  --bg: #f8f8f8;
  --surface: #ffffff;
  --text: #1f2937;
  --titles: #0b0b0d;
  --muted: #6b7280;
}

/* Navbar and footer are always transparent to inherit from main background */

/* helpers */
html {
  color-scheme: dark;
}
html[data-theme="light"] {
  color-scheme: light;
}
body {
  background: var(--bg);
  color: var(--text);
  font-family: var(--font-sans);
}
.container {
  width: 100%;
  max-width: var(--container-xl);
  margin-inline: auto;
  padding-inline: clamp(1rem, 4vw, 2rem);
}
.container--lg {
  max-width: var(--container-2xl);
}
.container--md {
  max-width: var(--container-lg);
}
.section {
  padding-block: var(--section-md);
}
.section--sm {
  padding-block: var(--section-sm);
}
.section--lg {
  padding-block: var(--section-lg);
}

.h1,
.h2,
.h3,
.h4 {
  color: var(--titles);
}
.h1 {
  font-size: var(--h1-size);
  line-height: var(--h1-line);
  font-weight: var(--h1-weight);
}
.h2 {
  font-size: var(--h2-size);
  line-height: var(--h2-line);
  font-weight: var(--h2-weight);
}
.h3 {
  font-size: var(--h3-size);
  line-height: var(--h3-line);
  font-weight: var(--h3-weight);
}
.h4 {
  font-size: var(--h4-size);
  line-height: var(--h4-line);
  font-weight: var(--h4-weight);
}
.body {
  font-size: var(--body-size);
  line-height: var(--body-line);
  font-weight: var(--body-weight);
}
.small {
  font-size: var(--small-size);
  line-height: var(--small-line);
  font-weight: var(--small-weight);
}

/* Layout utilities */
.text-left { text-align: left; }
.text-center { text-align: center; }
.w-full { width: 100%; }

/* Spacing utilities */
.mt-4 { margin-top: var(--space-16); }
.mt-6 { margin-top: var(--space-24); }
.mt-10 { margin-top: var(--space-64); }

/* Flex utilities */
.flex { display: flex; }
.inline-flex { display: inline-flex; }
.flex-wrap { flex-wrap: wrap; }
.gap-3 { gap: var(--space-12); }
.items-center { align-items: center; }
.justify-between { justify-content: space-between; }

/* Grid utilities */
.grid { display: grid; }
.grid-cols-2 { grid-template-columns: repeat(2, 1fr); }
.gap-8 { gap: var(--space-32); }

/* Responsive utilities */
@media (min-width: 768px) {
  .md\:grid-cols-2 { grid-template-columns: repeat(2, 1fr); }
  .md\:px-6 { padding-left: 1.5rem; padding-right: 1.5rem; }
  .md\:py-24 { padding-top: 6rem; padding-bottom: 6rem; }
}

@media (min-width: 1024px) {
  .lg\:px-8 { padding-left: 2rem; padding-right: 2rem; }
}

/* Position utilities */
.relative { position: relative; }
.absolute { position: absolute; }
.static { position: static; }
.top-0 { top: 0; }
.left-0 { left: 0; }
.right-0 { right: 0; }
.inset-0 { top: 0; right: 0; bottom: 0; left: 0; }

/* Z-index utilities */
.z-10 { z-index: 10; }
.z-40 { z-index: 40; }
.z-50 { z-index: 50; }

/* Size utilities */
.h-16 { height: 4rem; }
.min-h-screen { min-height: 100vh; }
.min-h-full { min-height: 100vh; }
.max-w-7xl { max-width: 80rem; }
.max-w-6xl { max-width: 72rem; }
.max-w-5xl { max-width: 64rem; }
.max-w-4xl { max-width: 56rem; }
.max-w-3xl { max-width: 48rem; }
.max-w-2xl { max-width: 42rem; }
.max-w-xl { max-width: 36rem; }
.max-w-lg { max-width: 32rem; }
.max-w-none { max-width: none; }

/* Padding utilities */
.px-4 { padding-left: 1rem; padding-right: 1rem; }
.px-6 { padding-left: 1.5rem; padding-right: 1.5rem; }
.py-16 { padding-top: 4rem; padding-bottom: 4rem; }
.py-24 { padding-top: 6rem; padding-bottom: 6rem; }

/* Background utilities */
.bg-transparent { background-color: transparent; }

/* Navbar specific classes */
.navbar {
  position: static;
  z-index: 50;
  background-color: var(--bg);
  border-bottom: 1px solid var(--border);
}

.navbar-container {
  max-width: 80rem;
  margin-left: auto;
  margin-right: auto;
  padding-left: 1rem;
  padding-right: 1rem;
  height: 4rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.navbar-brand {
  display: flex;
  align-items: center;
}

.navbar-nav {
  display: none;
  align-items: center;
  gap: 1.5rem;
}

.navbar-link {
  font-size: 0.875rem;
  font-weight: 600;
  transition: color 0.2s;
  color: #ffffff;
  text-decoration: none;
}

.navbar-link:hover {
  color: var(--primary);
}

.navbar-link--active {
  color: var(--primary);
}

.navbar-actions {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.navbar-toggle {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 2.5rem;
  height: 2.5rem;
  background: transparent;
  border: none;
  cursor: pointer;
}

.navbar-menu {
  background: #0b0b0d;
  border-top: 1px solid #141317;
}

.navbar-menu-nav {
  padding: 1rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.navbar-menu-link {
  display: block;
  font-size: 0.875rem;
  font-weight: 500;
  transition: color 0.2s;
  padding: 0.5rem 0;
  color: #ffffff;
}

.navbar-menu-link:hover {
  color: #5cb9f2;
}

.navbar-menu-link--active {
  color: #5cb9f2;
}

.navbar-menu-actions {
  padding: 1rem;
  border-top: 1px solid #141317;
}

@media (min-width: 768px) {
  .navbar-nav {
    display: flex;
  }
  
  .navbar-toggle {
    display: none;
  }
  
  .navbar-container {
    padding-left: 1.5rem;
    padding-right: 1.5rem;
  }
}

/* Button classes */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
  font-weight: 500;
  border-radius: var(--radius-sm);
  border: none;
  cursor: pointer;
  transition: all 0.2s;
  text-decoration: none;
}

.btn-primary {
  background-color: var(--primary);
  color: #0b0b0d;
}

.btn-primary:hover {
  opacity: 0.9;
}

.btn-secondary {
  background-color: var(--surface);
  color: #ffffff;
  border: 1px solid var(--border);
}

.btn-secondary:hover {
  background-color: var(--primary);
  color: var(--on-primary);
  border-color: var(--primary);
}

.btn-danger {
  background-color: var(--error);
  color: #ffffff;
  border-color: var(--error);
}

.btn-danger:hover {
  opacity: 0.9;
}

.btn-ghost {
  background-color: transparent;
  color: var(--text);
}

.btn-ghost:hover {
  background-color: var(--accent);
  color: var(--on-accent);
}

/* Button sizes */
.btn--sm {
  height: 2.25rem;
  padding: 0 0.75rem;
  font-size: 0.75rem;
}

.btn--md {
  height: 2.5rem;
  padding: 0.5rem 1rem;
  font-size: 0.875rem;
}

.btn--lg {
  height: 2.75rem;
  padding: 0.5rem 2rem;
  font-size: 1rem;
}

/* Icon spacing */
.btn-icon-left {
  margin-right: 0.5rem;
  display: inline-flex;
}

.btn-icon-right {
  margin-left: 0.5rem;
  display: inline-flex;
}

/* Loading spinner */
.spinner {
  margin-left: 0.5rem;
  display: inline-block;
  width: 1rem;
  height: 1rem;
  border: 2px solid var(--on-primary);
  border-top: 2px solid transparent;
  border-radius: var(--radius-full);
  animation: spin 1s linear infinite;
}

/* Card classes */
.card {
  background-color: var(--surface);
  border-radius: var(--radius-md);
  padding: var(--space-24);
  box-shadow: var(--shadow-2);
}

/* Text utilities */
.text-sm { font-size: 0.875rem; }
.text-base { font-size: 1rem; }
.text-lg { font-size: 1.125rem; }
.text-xl { font-size: 1.25rem; }
.text-2xl { font-size: 1.5rem; }
.text-3xl { font-size: 1.875rem; }
.text-4xl { font-size: 2.25rem; }

.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: 700; }

/* Color utilities */
.text-primary { color: var(--primary); }
.text-muted { color: var(--muted); }

/* Spacing utilities */
.mb-2 { margin-bottom: 0.5rem; }
.mb-4 { margin-bottom: 1rem; }
.mb-6 { margin-bottom: 1.5rem; }
.mb-8 { margin-bottom: 2rem; }

.space-y-4 > * + * { margin-top: 1rem; }

/* Border utilities */
.border-t { border-top: 1px solid var(--surface); }

/* Display utilities */
.block { display: block; }
.hidden { display: none; }

@media (min-width: 768px) {
  .md\:hidden { display: none; }
  .md\:flex { display: flex; }
  .md\:block { display: block; }
}

/* Input and form classes */
.input {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: 0.875rem;
  border: 1px solid var(--surface);
  border-radius: var(--radius-sm);
  background-color: var(--bg);
  color: var(--text);
  transition: border-color 0.2s, box-shadow 0.2s;
}

.input:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
}

.input:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.input--error {
  border-color: #ef4444;
}

.label {
  display: block;
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--titles);
  margin-bottom: 0.5rem;
}

.field {
  margin-bottom: 1rem;
}

.field-error {
  font-size: 0.75rem;
  color: #ef4444;
  margin-top: 0.25rem;
}

.field-help {
  font-size: 0.75rem;
  color: var(--muted);
  margin-top: 0.25rem;
}

/* Select */
.select {
  width: 100%;
  padding: 0.75rem 2.5rem 0.75rem 0.75rem; /* Padding équilibré : même padding gauche/droite visuel */
  font-size: 0.875rem;
  border: 1px solid var(--surface);
  border-radius: var(--radius-sm);
  background-color: var(--bg);
  color: var(--text);
  cursor: pointer;
  appearance: none; /* Supprime la flèche native */
  background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%239ca3af' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
  background-position: right 0.75rem center; /* Position de la flèche personnalisée */
  background-repeat: no-repeat;
  background-size: 1rem;
}

.select:focus {
  outline: none;
  border-color: var(--primary);
}

/* Textarea */
.textarea {
  width: 100%;
  padding: 0.75rem 1rem;
  font-size: 0.875rem;
  border: 1px solid var(--surface);
  border-radius: var(--radius-sm);
  background-color: var(--bg);
  color: var(--text);
  resize: vertical;
  min-height: 100px;
}

.textarea:focus {
  outline: none;
  border-color: var(--primary);
  box-shadow: 0 0 0 3px rgba(var(--primary), 0.1);
}

/* Badge classes */
.badge {
  display: inline-flex;
  align-items: center;
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
  font-weight: 500;
  border-radius: var(--radius-sm);
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.badge--primary {
  background-color: var(--primary);
  color: var(--on-primary);
}

.badge--secondary {
  background: var(--muted);
  color: var(--text);
}

.badge--success {
  background-color: var(--success);
  color: var(--bg);
}

.badge--warning {
  background-color: var(--warning);
  color: var(--bg);
}

.badge--error {
  background-color: var(--error);
  color: var(--bg);
}

/* Avatar classes */
.avatar {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-full);
  background-color: var(--surface);
  color: var(--text);
  font-weight: 500;
  overflow: hidden;
}

.avatar--sm {
  width: 2rem;
  height: 2rem;
  font-size: 0.75rem;
}

.avatar--md {
  width: 2.5rem;
  height: 2.5rem;
  font-size: 0.875rem;
}

.avatar--lg {
  width: 3rem;
  height: 3rem;
  font-size: 1rem;
}

.avatar--xl {
  width: 4rem;
  height: 4rem;
  font-size: 1.25rem;
}

.avatar img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Footer classes */
.footer {
  background-color: transparent;
  border-top: 1px solid var(--surface);
  padding: var(--space-48) 0;
}

.footer-container {
  max-width: 80rem;
  margin: 0 auto;
  padding: 0 1rem;
}

.footer-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  margin-bottom: 2rem;
}

.footer-section h3 {
  font-size: 1rem;
  font-weight: 600;
  color: var(--titles);
  margin-bottom: 1rem;
}

.footer-links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-links li {
  margin-bottom: 0.5rem;
}

.footer-link {
  color: var(--text);
  text-decoration: none;
  font-size: 0.875rem;
  transition: color 0.2s;
}

.footer-link:hover {
  color: var(--primary);
}

.footer-bottom {
  border-top: 1px solid var(--surface);
  padding-top: 2rem;
  text-align: center;
  color: var(--muted);
  font-size: 0.875rem;
}

/* Marketing component classes */

.cta-title {
  font-size: clamp(1.875rem, 4vw, 3rem);
  font-weight: 700;
  color: var(--titles);
  margin-bottom: var(--space-16);
  line-height: 1.2;
}

.cta-subtitle {
  font-size: 1.125rem;
  color: var(--text);
  margin-bottom: var(--space-32);
  max-width: 42rem;
  margin-left: auto;
  margin-right: auto;
}

.cta-actions {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-16);
  justify-content: center;
  align-items: center;
}

/* FAQ classes removed - now in components/marketing/faq.css */

/* Contact block classes */
.contact-block {
  padding: var(--space-32);
  background-color: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
}

.contact-block-content {
  text-align: center;
}

.contact-block-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--titles);
  margin-bottom: var(--space-16);
}

.contact-block-description {
  color: var(--text);
  margin-bottom: var(--space-24);
  line-height: 1.6;
}

.contact-block-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-12);
  margin-bottom: var(--space-24);
}

.contact-info-item {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-8);
  font-size: 0.875rem;
}

.contact-info-icon {
  font-size: 1rem;
  flex-shrink: 0;
}

.contact-info-text {
  color: var(--text);
}

.contact-block-actions {
  display: flex;
  gap: var(--space-12);
  justify-content: center;
}

.contact-block-image {
  width: 120px;
  height: 120px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg);
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.contact-placeholder {
  font-size: 3rem;
  opacity: 0.5;
}

.contact-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--titles);
