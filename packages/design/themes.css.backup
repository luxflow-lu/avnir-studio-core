.project-card-title {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--titles);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: var(--space-8);
  margin: 0;
}

.project-card-type {
  font-size: 0.75rem;
  flex-shrink: 0;
}

.project-type--artiste {
  background: rgba(147, 51, 234, 0.15);
  color: #a78bfa;
}

.project-type--beatmaker {
  background: rgba(59, 130, 246, 0.15);
  color: #60a5fa;
}

.project-type--studio {
  background: rgba(34, 197, 94, 0.15);
  color: #4ade80;
}

.project-type--producteur {
  background: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
}

.project-card-description {
  font-size: 0.75rem;
  color: var(--muted);
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin: 0;
}

.project-card-date {
  font-size: 0.75rem;
  color: var(--muted);
}

/* ModelSelector Component */
.model-selector {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
}

.model-card {
  position: relative;
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: var(--space-16);
  transition: all 0.2s ease;
  cursor: pointer;
}

.model-card:hover {
  border-color: rgba(255, 255, 255, 0.1);
}

.model-card--selected {
  border-color: var(--primary);
  box-shadow: 0 0 0 2px rgba(var(--primary-rgb), 0.2);
}

.model-card--disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.model-card-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: var(--space-12);
}

.model-card-info {
  flex: 1;
}

.model-card-title-row {
  display: flex;
  align-items: center;
  gap: var(--space-8);
  margin-bottom: var(--space-4);
  flex-wrap: wrap;
}

.model-card-name {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--titles);
  margin: 0;
}

.model-card-badge {
  font-size: 0.75rem;
}

.model-type--audio {
  background: rgba(59, 130, 246, 0.15);
  color: #60a5fa;
}

.model-type--vocal {
  background: rgba(147, 51, 234, 0.15);
  color: #a78bfa;
}

.model-type--instrumental {
  background: rgba(34, 197, 94, 0.15);
  color: #4ade80;
}

.model-type--mastering {
  background: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
}

.model-quality--standard {
  background: rgba(107, 114, 128, 0.15);
  color: #9ca3af;
}

.model-quality--premium {
  background: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
}

.model-quality--pro {
  background: rgba(239, 68, 68, 0.15);
  color: #f87171;
}

.model-badge--beta {
  background: rgba(59, 130, 246, 0.15);
  color: #60a5fa;
}

.model-badge--unavailable {
  background: rgba(239, 68, 68, 0.15);
  color: #f87171;
}

.model-card-description {
  font-size: 0.75rem;
  color: var(--muted);
  margin: 0 0 var(--space-8);
  line-height: 1.4;
}

.model-card-meta {
  font-size: 0.75rem;
  color: var(--muted);
}

.model-card-pricing {
  text-align: right;
  flex-shrink: 0;
}

.model-card-price {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--titles);
}

.model-card-unit {
  font-size: 0.75rem;
  color: var(--muted);
}

.model-card-capabilities {
  margin-bottom: var(--space-12);
}

.model-card-capabilities-title {
  font-size: 0.75rem;
  font-weight: 500;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin: 0 0 var(--space-8);
}

.model-card-capabilities-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-4);
}

.model-capability {
  padding: var(--space-4) var(--space-8);
  font-size: 0.75rem;
  background: rgba(255, 255, 255, 0.05);
  color: var(--muted);
  border-radius: var(--radius-sm);
}

.model-card-selected {
  position: absolute;
  top: var(--space-12);
  right: var(--space-12);
}

.model-card-checkmark {
  width: 1.25rem;
  height: 1.25rem;
  background: var(--primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.model-card-check-icon {
  width: 0.75rem;
  height: 0.75rem;
  color: white;
}

.model-selector-empty {
  text-align: center;
  padding: var(--space-32) var(--space-16);
}

.model-selector-empty-text {
  font-size: 0.875rem;
  color: var(--muted);
}

/* ProjectHeader Component */
.project-header {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: var(--space-24);
}

.project-header-content {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.project-header-info {
  flex: 1;
}

.project-header-title-row {
  display: flex;
  align-items: center;
  gap: var(--space-12);
  margin-bottom: var(--space-8);
  flex-wrap: wrap;
}

.project-header-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--titles);
  margin: 0;
}

.project-header-badge {
  font-size: 0.875rem;
}

.project-header-type--artiste {
  background: rgba(147, 51, 234, 0.15);
  color: #a78bfa;
}

.project-header-type--beatmaker {
  background: rgba(59, 130, 246, 0.15);
  color: #60a5fa;
}

.project-header-type--studio {
  background: rgba(34, 197, 94, 0.15);
  color: #4ade80;
}

.project-header-type--producteur {
  background: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
}

.project-header-status--draft {
  background: rgba(107, 114, 128, 0.15);
  color: #9ca3af;
}

.project-header-status--active {
  background: rgba(34, 197, 94, 0.15);
  color: #4ade80;
}

.project-header-status--archived {
  background: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
}

.project-header-description {
  font-size: 0.875rem;
  color: var(--muted);
  margin: 0 0 var(--space-12);
  line-height: 1.4;
}

.project-header-meta {
  display: flex;
  align-items: center;
  gap: var(--space-16);
  font-size: 0.75rem;
  color: var(--muted);
}

.project-header-meta-item {
  display: inline-block;
}

.project-header-actions {
  display: flex;
  align-items: center;
  gap: var(--space-8);
  flex-shrink: 0;
}

.project-header-action {
  padding: var(--space-8) var(--space-12);
  font-size: 0.875rem;
  background: rgba(255, 255, 255, 0.05);
  color: var(--muted);
  border: none;
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.project-header-action:hover {
  background: rgba(255, 255, 255, 0.1);
  color: var(--titles);
}

.project-header-action-icon {
  width: 1rem;
  height: 1rem;
}

/* PromptEditor Component */
.prompt-editor {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
}

.prompt-editor-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: var(--space-8);
}

.prompt-editor-actions {
  display: flex;
  align-items: center;
  gap: var(--space-8);
}

.prompt-editor-button {
  font-size: 0.75rem;
}

.prompt-editor-icon {
  width: 1rem;
  height: 1rem;
  margin-right: var(--space-4);
}

.prompt-editor-stats {
  font-size: 0.75rem;
  color: var(--muted);
}

.prompt-editor-presets,
.prompt-editor-history,
.prompt-editor-save-modal {
  padding: var(--space-16);
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
}

.prompt-editor-presets,
.prompt-editor-history {
  max-height: 15rem;
  overflow-y: auto;
}

.prompt-editor-panel-title {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--titles);
  margin: 0 0 var(--space-12);
}

.prompt-editor-category {
  margin-bottom: var(--space-16);
}

.prompt-editor-category:last-child {
  margin-bottom: 0;
}

.prompt-editor-category-title {
  font-size: 0.75rem;
  font-weight: 500;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin: 0 0 var(--space-8);
}

.prompt-editor-preset-list,
.prompt-editor-history-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.prompt-editor-preset,
.prompt-editor-history-item {
  width: 100%;
  text-align: left;
  padding: var(--space-12);
  background: rgba(255, 255, 255, 0.05);
  border: none;
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all 0.2s ease;
}

.prompt-editor-preset:hover,
.prompt-editor-history-item:hover {
  background: rgba(255, 255, 255, 0.1);
}

.prompt-editor-preset-header,
.prompt-editor-history-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: var(--space-8);
}

.prompt-editor-preset-name {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--titles);
  margin: 0;
}

.prompt-editor-preset:hover .prompt-editor-preset-name {
  color: var(--primary);
}

.prompt-editor-preset-tags {
  display: flex;
  gap: var(--space-4);
}

.prompt-editor-tag {
  font-size: 0.75rem;
  background: rgba(255, 255, 255, 0.1);
  color: var(--muted);
}

.prompt-editor-preset-text,
.prompt-editor-history-text {
  font-size: 0.75rem;
  color: var(--muted);
  line-height: 1.4;
  margin: 0;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.prompt-editor-history-item:hover .prompt-editor-history-text {
  color: var(--primary);
}

.prompt-editor-history-date {
  font-size: 0.75rem;
  color: var(--muted);
}

.prompt-editor-history-badge {
  font-size: 0.75rem;
  background: rgba(34, 197, 94, 0.15);
  color: #4ade80;
}

.prompt-editor-save-title {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--titles);
  margin: 0 0 var(--space-12);
}

.prompt-editor-save-form {
  display: flex;
  gap: var(--space-8);
}

.prompt-editor-save-input {
  flex: 1;
  padding: var(--space-8) var(--space-12);
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: var(--radius-sm);
  color: var(--titles);
  font-size: 0.875rem;
}

.prompt-editor-save-input::placeholder {
  color: var(--muted);
}

.prompt-editor-save-input:focus {
  outline: none;
  border-color: var(--primary);
}

.prompt-editor-main {
  position: relative;
}

.prompt-editor-textarea {
  min-height: 7.5rem;
  resize: none;
}

.prompt-editor-generate {
  position: absolute;
  bottom: var(--space-12);
  right: var(--space-12);
}

.prompt-editor-generate-button {
  box-shadow: var(--shadow-4);
}

.prompt-editor-spinner {
  width: 1rem;
  height: 1rem;
  margin-right: var(--space-8);
  animation: spin 1s linear infinite;
}

.prompt-editor-spinner-track {
  opacity: 0.25;
}

.prompt-editor-spinner-fill {
  opacity: 0.75;
}

/* ===== SAAS COMPONENTS ===== */

/* PricingTable Component */
.pricing-table {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  gap: var(--space-24);
}

@media (min-width: 768px) {
  .pricing-table {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-32);
  }
}

.pricing-card {
  position: relative;
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  padding: var(--space-24);
  transition: all 0.2s ease;
}

.pricing-card:hover {
  border-color: rgba(255, 255, 255, 0.2);
}

.pricing-card--popular {
  border-color: var(--primary);
  box-shadow: var(--shadow-4);
}

.pricing-badge {
  position: absolute;
  top: -12px;
  left: 50%;
  transform: translateX(-50%);
}

.pricing-badge-text {
  display: inline-block;
  padding: var(--space-4) var(--space-8);
  background: var(--muted);
  color: var(--text);
  font-size: 0.6875rem;
  font-weight: 500;
  border-radius: var(--radius-full);
  border: 1px solid var(--border);
  box-shadow: var(--shadow-1);
}

.pricing-header {
  text-align: center;
  margin-bottom: var(--space-24);
}

.pricing-name {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--titles);
  margin-bottom: var(--space-8);
}

.pricing-description {
  font-size: 0.875rem;
  color: var(--muted);
  margin-bottom: var(--space-16);
}

.pricing-price {
  margin-bottom: var(--space-8);
}

.pricing-amount {
  font-size: 1.875rem;
  font-weight: 700;
  color: var(--titles);
}

.pricing-period {
  font-size: 0.875rem;
  color: var(--muted);
  margin-left: var(--space-4);
}

.pricing-features {
  list-style: none;
  padding: 0;
  margin: 0 0 var(--space-24);
  display: flex;
  flex-direction: column;
  gap: var(--space-12);
}

.pricing-feature {
  display: flex;
  align-items: flex-start;
  gap: var(--space-8);
  font-size: 0.875rem;
}

.pricing-feature-icon {
  width: 1rem;
  height: 1rem;
  color: var(--primary);
  margin-top: 2px;
  flex-shrink: 0;
}

.pricing-feature-text {
  color: var(--muted);
}

.pricing-cta {
  width: 100%;
  margin-top: var(--space-16);
}

/* ===== PRIMITIVES COMPONENTS ===== */

/* Card Component */
.card {
  background: var(--surface);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-2);
  padding: var(--space-24);
}

/* ===== AUDIO TOOLS COMPONENTS ===== */

/* Audio section spacing */
.audio-section-container {
  padding-top: var(--space-48);
}

/* FileUpload Component */
.file-upload {
  border: 2px dashed var(--border);
  border-radius: var(--radius-lg);
  padding: var(--space-32);
  text-align: center;
  transition: all 0.2s ease;
  background: var(--surface);
  cursor: pointer;
}

.file-upload-input {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

.file-upload--active {
  border-color: var(--primary);
  background: rgba(237, 237, 237, 0.05);
}

.file-upload-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
}

.file-upload-icon-container {
  color: var(--muted);
}

.file-upload-icon {
  width: 3rem;
  height: 3rem;
  margin: 0 auto var(--space-16);
}

.file-upload-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-4);
}

.file-upload-button {
  color: var(--primary);
  font-weight: 500;
  text-decoration: none;
  cursor: pointer;
  background: none;
  border: none;
  font-size: inherit;
}

.file-upload-button:hover {
  text-decoration: underline;
}

.file-upload-or {
  color: var(--muted);
}

.file-upload-info {
  font-size: 0.75rem;
  color: var(--muted);
  margin: 0;
}

/* Custom FileUpload for audio */
.audio-drop-zone-custom {
  min-height: 200px;
  max-width: 600px;
  margin: 0 auto;
}

.audio-drop-zone-custom:hover {
  border-color: var(--primary);
}

/* Audio Drop Zone (Legacy - keeping for backwards compatibility) */
.audio-drop-zone {
  border: 2px dashed var(--border);
  border-radius: var(--radius-lg);
  padding: var(--space-64);
  text-align: center;
  transition: all 0.2s ease;
  background: var(--surface);
  cursor: pointer;
}

.audio-drop-zone:hover,
.audio-drop-zone--active {
  border-color: var(--primary);
  background: rgba(237, 237, 237, 0.05);
}

.audio-drop-zone-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-16);
}

.audio-drop-zone-icon {
  font-size: 3rem;
  opacity: 0.7;
}

.audio-drop-zone-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--titles);
  margin: 0;
}

.audio-drop-zone-subtitle {
  color: var(--muted);
  margin: 0;
}

.audio-drop-zone-divider {
  color: var(--muted);
  font-size: 0.875rem;
  position: relative;
}

.audio-drop-zone-divider::before,
.audio-drop-zone-divider::after {
  content: '';
  position: absolute;
  top: 50%;
  width: 3rem;
  height: 1px;
  background: var(--border);
}

.audio-drop-zone-divider::before {
  right: calc(100% + var(--space-16));
}

.audio-drop-zone-divider::after {
  left: calc(100% + var(--space-16));
}

.audio-drop-zone-button {
  background: var(--primary);
  color: #0b0b0d;
  border: none;
  border-radius: var(--radius-md);
  padding: var(--space-12) var(--space-24);
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.audio-drop-zone-button:hover {
  opacity: 0.9;
  transform: translateY(-1px);
}

.audio-drop-zone-input {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border: 0;
}

/* Audio Analysis (Loading) */
.audio-analysis {
  text-align: center;
  padding: var(--space-64);
}

.audio-analysis-spinner {
  width: 3rem;
  height: 3rem;
  border: 3px solid var(--border);
  border-top: 3px solid var(--primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto var(--space-24);
}

.audio-analysis-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--titles);
  margin: 0 0 var(--space-8);
}

.audio-analysis-subtitle {
  color: var(--muted);
  margin: 0;
}

/* Audio Results */
.audio-results {
  background: var(--surface);
  border-radius: var(--radius-lg);
  padding: var(--space-32);
  border: 1px solid var(--border);
}

.audio-results-header {
  text-align: center;
  margin-bottom: var(--space-32);
}

.audio-results-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--titles);
  margin: 0 0 var(--space-8);
}

.audio-results-file {
  color: var(--muted);
  font-size: 0.875rem;
  margin: 0;
  word-break: break-all;
}

.audio-results-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
  gap: var(--space-16);
  margin-bottom: var(--space-32);
}

.audio-result-card {
  background: var(--bg);
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  padding: var(--space-16);
  text-align: center;
}

.audio-result-label {
  font-size: 0.75rem;
  font-weight: 500;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: var(--space-8);
}

.audio-result-value {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
}

.audio-results-actions {
  display: flex;
  gap: var(--space-12);
  justify-content: center;
  flex-wrap: wrap;
}

/* Responsive */
@media (max-width: 640px) {
  .audio-drop-zone {
    padding: var(--space-32);
  }
  
  .audio-results-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .audio-results-actions {
    flex-direction: column;
  }
}

/* ===== NOTIFICATIONS SYSTEM ===== */
.notifications-container {
  position: fixed;
  top: var(--space-16);
  right: var(--space-16);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
  max-width: 24rem;
  pointer-events: none;
}

.notification {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  padding: var(--space-12);
  box-shadow: var(--shadow-3);
  animation: slideInFromRight 0.3s ease-out;
  pointer-events: auto;
}

.notification--success {
  border-left: 4px solid var(--success);
}

.notification--error {
  border-left: 4px solid var(--error);
}

.notification--info {
  border-left: 4px solid var(--accent);
}

.notification-content {
  display: flex;
  align-items: flex-start;
  gap: var(--space-8);
}

.notification-icon {
  font-size: 1rem;
  flex-shrink: 0;
  margin-top: 0.125rem;
}

.notification-message {
  color: var(--text);
  font-size: 0.875rem;
  line-height: 1.4;
}

@keyframes slideInFromRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

@media (max-width: 640px) {
  .notifications-container {
    left: var(--space-16);
    right: var(--space-16);
    max-width: none;
  }
}
