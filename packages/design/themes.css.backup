/* CTA Section */

.cta-container {
  max-width: 80rem;
  margin: 0 auto;
}

.cta-content {
  display: flex;
  flex-direction: column;
  gap: var(--space-32);
  align-items: center;
}

.cta-content--with-image {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-32);
  align-items: center;
}

.cta-content--text-only {
  text-align: center;
}

.cta-content--reverse .cta-text {
  order: 2;
}

.cta-content--reverse .cta-image {
  order: 1;
}

.cta-text {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
}


.cta-actions {
  display: flex;
  gap: var(--space-16);
  flex-wrap: wrap;
}

.cta-image {
  display: flex;
  align-items: center;
  justify-content: center;
}

@media (max-width: 768px) {
  .cta-content--with-image {
    grid-template-columns: 1fr;
