.gallery-thumb {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: var(--radius-sm);
  border: 2px solid var(--border);
  cursor: pointer;
  transition: all 0.2s ease;
}

.gallery-thumb--active {
  border-color: var(--primary);
}

.gallery-thumb:hover {
  border-color: var(--primary);
}

/* Filters Component */
.filters {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
}

.filter-group {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.filter-title {
  font-weight: 600;
  color: var(--titles);
  font-size: 0.875rem;
}

.filter-options {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.filter-option {
  display: flex;
  align-items: center;
  gap: var(--space-8);
  cursor: pointer;
  font-size: 0.875rem;
  color: var(--text);
}

.filter-checkbox {
  width: 1rem;
  height: 1rem;
  border: 1px solid var(--border);
  border-radius: var(--radius-xs);
  background-color: var(--surface);
}

.filter-range {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.range-slider {
  width: 100%;
  height: 4px;
  background-color: var(--border);
  border-radius: var(--radius-full);
  outline: none;
  cursor: pointer;
}

.range-values {
  font-size: 0.75rem;
  color: var(--muted);
  text-align: center;
}

/* AVNIR Specific Components */
.project-card {
  display: flex;
  gap: var(--space-16);
  padding: var(--space-16);
  background-color: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-lg);
  transition: all 0.2s ease;
}

.project-card:hover {
  border-color: var(--primary);
  transform: translateY(-2px);
}

.project-thumbnail {
  width: 4rem;
  height: 4rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg);
  border-radius: var(--radius-md);
  font-size: 1.5rem;
  flex-shrink: 0;
}

.project-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.project-title {
  font-weight: 600;
  color: var(--titles);
  margin: 0;
}

.project-description {
  color: var(--text);
  font-size: 0.875rem;
  margin: 0;
}

.project-meta {
  display: flex;
  align-items: center;
  gap: var(--space-12);
  font-size: 0.75rem;
}

.project-status {
  padding: var(--space-2) var(--space-8);
  border-radius: var(--radius-full);
  font-weight: 500;
}

.project-status--active {
  background-color: rgba(16, 185, 129, 0.1);
  color: var(--success);
}

.project-status--completed {
  background-color: rgba(237, 237, 237, 0.1);
  color: var(--primary);
}

.project-progress {
  color: var(--muted);
}

/* Asset Grid */
.asset-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
  gap: var(--space-12);
}

.asset-tile {
  position: relative;
  aspect-ratio: 1;
  border: 2px solid var(--border);
  border-radius: var(--radius-md);
  overflow: hidden;
  cursor: pointer;
  transition: all 0.2s ease;
}

.asset-tile:hover {
  border-color: var(--primary);
  transform: scale(1.02);
}

.asset-tile--selected {
  border-color: var(--primary);
  box-shadow: 0 0 0 2px rgba(237, 237, 237, 0.2);
}

.asset-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--surface);
  font-size: 2rem;
}

.asset-overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.2s ease;
}

.asset-tile:hover .asset-overlay {
  opacity: 1;
}

.asset-select {
  padding: var(--space-4) var(--space-8);
  background-color: var(--primary);
  color: var(--bg);
  border: none;
  border-radius: var(--radius-sm);
  font-size: 0.75rem;
  font-weight: 500;
  cursor: pointer;
}

/* AI Interface */
.ai-interface {
  display: flex;
  flex-direction: column;
  gap: var(--space-16);
}

.ai-model-selector {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.ai-prompt-editor {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.prompt-suggestions {
  display: flex;
  gap: var(--space-8);
  flex-wrap: wrap;
}

.suggestion-tag {
  padding: var(--space-4) var(--space-8);
  background-color: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-full);
  font-size: 0.75rem;
  color: var(--text);
  cursor: pointer;
  transition: all 0.2s ease;
}

.suggestion-tag:hover {
  background-color: var(--bg);
  border-color: var(--primary);
}

/* Status Components */
.status-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-16);
}

.status-item {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
  padding: var(--space-16);
  background-color: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
}

.credit-balance {
  font-weight: 600;
  color: var(--success);
  font-size: 1.125rem;
}

.render-status {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.render-status--processing {
  color: var(--warning);
}

.render-progress {
  width: 100%;
  height: 4px;
  background-color: var(--border);
  border-radius: var(--radius-full);
  overflow: hidden;
}

.render-progress-bar {
  height: 100%;
  background-color: var(--warning);
  transition: width 0.3s ease;
}

.permission-badge {
  padding: var(--space-4) var(--space-8);
  border-radius: var(--radius-full);
  font-size: 0.75rem;
  font-weight: 500;
}

.permission-badge--premium {
  background-color: rgba(16, 185, 129, 0.1);
  color: var(--success);
  border: 1px solid var(--success);
}

/* Sidebar Component */
.sidebar {
  background-color: var(--surface);
  border: 1px solid var(--border);
  border-radius: var(--radius-md);
  padding: var(--space-16);
  height: fit-content;
}

.sidebar-nav {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.sidebar-item {
  display: flex;
  align-items: center;
  gap: var(--space-12);
  padding: var(--space-12) var(--space-16);
  border-radius: var(--radius-sm);
  text-decoration: none;
  color: var(--text);
  transition: all 0.2s ease;
  font-size: 0.875rem;
  font-weight: 500;
}

.sidebar-item:hover {
  background-color: var(--bg);
  color: var(--primary);
}

.sidebar-item--active {
  background-color: var(--primary);
  color: var(--on-primary);
}

.sidebar-item--active:hover {
  background-color: var(--primary);
  color: var(--on-primary);
  opacity: 0.9;
}

.sidebar-icon {
  font-size: 1rem;
  flex-shrink: 0;
}

