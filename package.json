{
  "name": "avnir-studio-core",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:tokens": "pnpm -w --filter @avnir/tokens build",
    "build:ladle": "pnpm -w --filter @avnir/ladle build",
    "build:site": "pnpm run build:tokens && pnpm run build:ladle",
    "dev:ladle": "turbo run dev --filter=@avnir/ladle",
    "ladle": "pnpm dev:ladle",
    "dev:docs": "turbo run dev --filter=@avnir/docs",
    "build:docs": "turbo run build --filter=@avnir/docs",
    "dev:demo": "vite --config apps/demo/vite.config.ts",
    "build:demo": "vite build --config apps/demo/vite.config.ts",
    "preview:demo": "vite preview --config apps/demo/vite.config.ts",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier -w ."
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.4.13",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "vite": "^7.1.10"
  }
}
