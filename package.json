{
  "name": "avnir-studio-core",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": "20.x",
    "pnpm": "9.x"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:tokens": "turbo run build --filter=@avnir/tokens",
    "build:design": "turbo run build --filter=@avnir/design",
    "build:ui": "turbo run build --filter=@avnir/ui",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "plop": "^4.0.4",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^6.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.13",
    "tsup": "^8.5.0",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "vite": "^7.1.10",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "dependencies": {
    "@avnir/tokens": "workspace:^",
    "@avnir/ui": "workspace:^",
    "@features/audio-tools": "workspace:^",
    "@features/visual-generator": "workspace:^",
    "clsx": "^2.1.1",
    "next": "^15.5.6"
  }
}
