{
  "name": "avnir-studio-core",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": "20.x",
    "pnpm": "9.x"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:tokens": "turbo run build --filter=@avnir/tokens",
    "build:design": "turbo run build --filter=@avnir/design",
    "build:icons": "turbo run build --filter=@avnir/icons",
    "build:brandkit": "turbo run build --filter=@avnir/brandkit",
    "build:ui": "turbo run build --filter=@avnir/ui",
    "dev:ui": "turbo run dev --filter=@avnir/ui",
    "dev:muzisystem": "turbo run dev --filter=muzisystem",
    "build:muzisystem": "turbo run build --filter=muzisystem",
    "dev:muzitools": "turbo run dev --filter=muzitools",
    "build:muzitools": "turbo run build --filter=muzitools",
    "typecheck": "turbo run typecheck",
    "lint": "eslint .",
    "test": "turbo run test",
    "format": "prettier --write .",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "health": "node scripts/health-check-v2.js",
    "health:old": "node scripts/health-check.js",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=@avnir/ui",
    "prepare": "husky",
    "docs:validate": "node scripts/validate-docs.js",
    "docs:health": "node scripts/validate-docs.js",
    "docs:check": "node scripts/validate-docs.js",
    "docs:update": "node scripts/update-doc-metadata.js update",
    "docs:add-metadata": "node scripts/update-doc-metadata.js add-all",
    "cascade:sync": "node scripts/sync-cascade.js",
    "architecture:check": "node scripts/architecture-check.js",
    "architecture:graph": "depcruise --config .dependency-cruiser.js --output-type dot apps/muzisystem/src | dot -T svg > dep-graph.svg",
    "components:validate": "node scripts/validate-component-pages.js"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "dependency-cruiser": "^17.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.6",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^16.2.6",
    "plop": "^4.0.4",
    "postcss": "^8.4.47",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^6.0.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.13",
    "tsup": "^8.5.0",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^4.0.1"
  },
  "dependencies": {
    "@avnir/tokens": "workspace:^",
    "@avnir/ui": "workspace:^",
    "@features/audio-tools": "workspace:^",
    "@features/visual-generator": "workspace:^",
    "clsx": "^2.1.1",
    "next": "^15.5.6"
  }
}
