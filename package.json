{
  "name": "avnir-studio-core",
  "private": true,
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "preinstall": "corepack enable && corepack prepare pnpm@9.6.0 --activate",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "turbo": "^2.1.1"
  },
  "engines": { "node": "20.x" },
  "workspaces": [
    "apps/*",
    "packages/*",
    "features/*",
    "brandkit"
  ]
}
